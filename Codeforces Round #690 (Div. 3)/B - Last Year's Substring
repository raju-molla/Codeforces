#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define Fast ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);

int main()
{

    Fast
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
       string s;
       cin>>s;
       int flag=0;
       for(int i=0; i<=4; i++){
            string a=s.substr(0,i);
            string b=s.substr(n-4+i);
            string ans= a+b;
            if(ans== "2020"){
                cout<< "YES"<<endl;
                flag=1;
                break;
            }
       }
       if(flag==0)cout<< "NO"<<endl;



    }

}

