#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,m;
    cin>>n>>m;
    int flag=0;
    for(int i=0; i<n; i++)
    {   
        if(i%2==0){
            for(int j=0; j<m; j++){
                cout<< "#";
            }
            cout<<endl;
        }else{
            if(flag==0){
                  for(int k=0; k<m-1; k++){
                   cout<< ".";
                }
                 cout<< "#"<<endl; 
                 flag=1;    
            }
            else{
                cout<< "#";
                for(int k=0; k<m-1; k++){
                    cout<< ".";
                }
                cout<<endl;
                flag=0;
            }
            
        }
       
        
    }
}
