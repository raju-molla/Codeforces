#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define Fast ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);

int main()
{

    Fast
    int t;
    cin>>t;
    while(t--){
      int n;
      cin>>n;
      string s;
      cin>>s;
      int cnt=0;
      for(int i=0; i<n; i++){
        if(s[i]==')'){
            cnt++;
        }else {
            cnt=0;
        }

      }
      if(cnt*2>n){
        cout<< "YES"<<endl;
      }
      else
      {
            cout<< "NO"<<endl;
      }

    }

}





