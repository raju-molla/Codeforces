#include<bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        string s;
        cin>>s;
        int c=0;
        for(int i=0; i<n; i++){
            if(s[i]==')'){
                if(c!=0){
                    c--;
                }
            }
            if(s[i]=='('){
                c++;
            }
        }
        cout<<c<<endl;
    
    
    }
}
