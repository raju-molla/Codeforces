#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
       ll a,b;
       cin>>a>>b;
       ll sum=a*b;
       if(sum%2==0){
           cout<<sum/2<<endl;
       }else{
           cout<<(sum+1)/2<<endl;
       }
        
    }
}
