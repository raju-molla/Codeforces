#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int c=0;
    
        while(n>=100){
            c++;
            n-=100;
        }
        while(n>=20){
            c++;
            n-=20;
        }
        while (n>=10)
        {
            c++;
            n-=10;
        }
        while (n>=5)
        {
            c++;
            n-=5;
        }
        while (n>=1)
        {
             c++;
             n-=1;
        }
        
        cout<<c<<endl;
        
    
}
