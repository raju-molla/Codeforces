#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define Fast ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);

int main()
{


    int tc;
    cin>>tc;
    while(tc--)
    {
        ll n;
        cin>>n;
        ll c = 0, res = 0;
        for(ll i=1; i<=n; i++)
        {
            ll m;
            cin>>m;
            res += m;
            if(m == 1) c++;
        }
        if(res%2 != 0)
        {
            cout<<"NO"<<endl;
            continue;
        }
        if((res/= 2)%2 != 0 && (c%2 != 0 || c == 0))
        {
            cout<<"NO"<<endl;
            continue;
        }
        cout<<"YES"<<endl;
    }
}




